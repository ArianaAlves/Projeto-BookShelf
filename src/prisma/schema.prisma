model Book {
  id          String        @id @default(cuid())
  title       String
  author      String
  year        Int
  pages       Int
  rating      Float
  synopsis    String
  cover       String
  status      ReadingStatus @default(QUERO_LER)
  currentPage Int           @default(0)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  isbn        String?
  notes       String?

  // Relacionamento com Genre
  genreId String
  genre   Genre  @relation(fields: [genreId], references: [id])
}

model Genre {
  id    String @id @default(cuid())
  name  String
  books Book[] // Relacionamento reverso
}
